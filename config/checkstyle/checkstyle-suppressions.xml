<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
          "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
          "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- GlobalExceptionHandler catches Exception by design (fallback handler) -->
    <suppress checks="IllegalCatch"
              files="GlobalExceptionHandler\.java"/>

    <!-- TelegramWebhookHandler: Telegram update parsing safety net -->
    <suppress checks="IllegalCatch"
              files="TelegramWebhookHandler\.java"/>

    <!-- UpdateProcessor: executor thread safety net (2 broad catches) -->
    <suppress checks="IllegalCatch"
              files="UpdateProcessor\.java"/>

    <!-- BotDispatcher: command dispatch safety net -->
    <suppress checks="IllegalCatch"
              files="BotDispatcher\.java"/>

    <!-- CanaryRouter: Redis fallback on failure -->
    <suppress checks="IllegalCatch"
              files="CanaryRouter\.java"/>

    <!-- TelegramNotificationService: send failure handling -->
    <suppress checks="IllegalCatch"
              files="TelegramNotificationService\.java"/>

    <!-- LedgerService: post-commit cache update safety net -->
    <suppress checks="IllegalCatch"
              files="LedgerService\.java"/>

    <!-- jOOQ generated code: exempt from style checks -->
    <suppress checks=".*"
              files="[/\\]generated[/\\]"/>

    <!-- ArchUnit reflection: reflect() throws unchecked exceptions -->
    <suppress checks="IllegalCatch"
              files="CodingRulesArchTest\.java"/>

    <!-- Test files: magic numbers and text block formatting are natural -->
    <suppress checks="MagicNumber"
              files=".*Tests?\.java$"/>
    <suppress checks="TextBlockGoogleStyleFormatting"
              files=".*Tests?\.java$"/>

    <!-- Test file: HMAC helper wraps checked exceptions -->
    <suppress checks="IllegalCatch"
              files="TelegramInitDataValidatorTest\.java"/>

    <!-- DealTimeoutScheduler: scheduler loop safety net -->
    <suppress checks="IllegalCatch"
              files="DealTimeoutScheduler\.java"/>

    <!-- Test files: unused locals are common for setup/assertion helpers -->
    <suppress checks="UnusedLocalVariable"
              files=".*Tests?\.java$"/>

    <!-- Test files: unnecessary parentheses in assertions are fine -->
    <suppress checks="UnnecessaryParentheses"
              files=".*Tests?\.java$"/>
</suppressions>
