{
  "name": "advert-market-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "format": "biome format --write src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --project=unit",
    "test:watch": "vitest --project=unit",
    "test:coverage": "vitest run --project=unit --coverage",
    "test:storybook": "vitest run --project=storybook",
    "test:arch": "vitest run --project=arch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "api:sync": "cd .. && ./gradlew :advert-market-app:generateOpenApiDocs",
    "api:types": "openapi-typescript ../api/openapi.yml -o src/shared/api/schema.gen.ts",
    "api:types:sync": "npm run api:sync && npm run api:types",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-virtual": "^3.13.18",
    "@telegram-apps/sdk-react": "^3.3.9",
    "@telegram-tools/ui-kit": "^0.2.4",
    "@tonconnect/ui-react": "^2.4.1",
    "eruda": "^3.4.3",
    "i18next": "^25.8.5",
    "motion": "^12.34.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-i18next": "^16.5.4",
    "react-router": "^7.13.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@chromatic-com/storybook": "^5.0.1",
    "@playwright/test": "^1.58.2",
    "@storybook/addon-a11y": "^10.2.8",
    "@storybook/addon-docs": "^10.2.8",
    "@storybook/addon-onboarding": "^10.2.8",
    "@storybook/addon-vitest": "^10.2.8",
    "@storybook/react-vite": "^10.2.8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.0.0",
    "msw": "^2.12.10",
    "openapi-typescript": "^7.13.0",
    "playwright": "^1.58.2",
    "storybook": "^10.2.8",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-mkcert": "^1.17.9",
    "vitest": "^4.0.18"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
